<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_intro_nfc_authentication_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/color_white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.tagtalk.winemate.IntroNfcAuthenticationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/intro_nfc_authentication_fragment_desc">
        <pl.droidsonroids.gif.GifTextView
            android:id="@+id/intro_nfc_authentication_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/intro_nfc_scan"
            android:contentDescription="@null"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/intro_nfc_authentication_fragment_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@null"
        android:gravity="center"
        android:minHeight="50dp"
        android:orientation="vertical"
        android:src="@drawable/image_placeholder">

        <LinearLayout
            android:id="@+id/intro_nfc_authentication_fragment_turn_on_nfc_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="\u25CF  "
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/intro_nfc_turn_on_nfc_desc"
                android:textColor="@color/text_dark"
                android:textSize="19sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/intro_nfc_authentication_fragment_touch_nfc_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="\u25CF  "
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/intro_nfc_touch_nfc_desc"
                android:textColor="@color/text_dark"
                android:textSize="19sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/intro_nfc_authentication_fragment_no_nfc_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="\u25CF  "
                android:textColor="@color/color_yellow"
                android:textSize="19sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/intro_nfc_no_nfc_desc"
                android:textSize="19sp"
                android:textColor="@color/text_dark"/>
        </LinearLayout>

        <TextView
            android:id="@+id/intro_nfc_authentication_fragment_turn_on_nfc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/rectangle_button_green_primary"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:text="@string/intro_nfc_turn_on_nfc_btn_text"
            android:textColor="@color/text_white"
            android:textSize="19sp"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>

