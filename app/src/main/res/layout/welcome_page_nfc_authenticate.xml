<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center_horizontal"
    tools:context="co.tagtalk.winemate.WelcomePageNfcAuthenticateFragment">

    <ImageView
        android:id="@+id/welcome_nfc_authenticate_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcome_nfc_authenticate_text"
        android:contentDescription="@null"
        android:paddingTop="50dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:src="@drawable/welcome_1_nfc_scan"/>

    <!--pl.droidsonroids.gif.GifTextView
        android:id="@+id/welcome_nfc_authenticate_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcome_nfc_authenticate_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/welcome_1_nfc_scan"/-->

    <TextView
        android:id="@+id/welcome_nfc_authenticate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="@string/welcome_page_nfc_auth_title"
        android:textAlignment="center"
        android:textColor="@color/colorTextWhite"
        android:textSize="17sp"/>

</RelativeLayout>
